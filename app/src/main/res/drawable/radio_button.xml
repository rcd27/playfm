<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:innerRadius="3dp" android:shape="ring" android:thickness="5dp" android:useLevel="false">
            <solid android:color="@color/persianGreen" />
            <size android:height="20dp" android:width="20dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#f2f1f1" />
            <size android:height="16dp" android:width="16dp" />
        </shape>
    </item>
</selector>