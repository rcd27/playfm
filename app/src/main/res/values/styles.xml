<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/strangeColor</item>
        <item name="android:windowBackground">@color/white</item>
        <!--For `back` button in toolbar-->
        <item name="colorControlNormal">@color/strangeColor</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HintTextStyleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/text_input_edit_text_color_states</item>
    </style>

    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Light.ActionBar" />

    <!--Explanations-->
    <style name="ToolbarTitleText">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/newTextColorDark</item>
    </style>

    <style name="ExchangeExplanationText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/newTextColorDarkWithOpacity</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SmallMediumDarkText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/newTextColorDark</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MediumDarkText">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/newTextColorDark</item>
    </style>

    <style name="ExchangeEditTextText">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:color">@color/newTextColorDark</item>
    </style>

    <style name="BorderlessButton">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#029892</item>
    </style>

    <style name="ColoredButton">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/bg_button_strange</item>
    </style>

    <style name="SemiBoldDarkTitle">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/newTextColorDark</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:elevation">8dp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/alarmRed</item>
        <item name="android:textColorPrimary">@color/newTextColorDark</item>
        <item name="android:textAppearance">@style/BottomSheetSmallTitle</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="EnterPhoneEditText">
        <item name="colorControlNormal">@color/hintColor</item>
        <item name="colorControlActivated">@color/newTextColorDarkWithOpacity</item>
        <item name="colorControlHighlight">@color/newTextColorDark</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/newTextColorDark</item>
    </style>

    <style name="HeaderText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/newTextColorDark</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="BottomSheetSmallTitle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/newTextColorDarkWithOpacity</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomSheetSmallValue">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/newTextColorDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CollapsingToolbarTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/newTextColorDark</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DashboardWidgetAmount">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/newTextColorDark</item>
    </style>

    <style name="Launcher" parent="AppTheme">
        <item name="colorPrimaryDark">#0a90a3</item>
        <item name="android:windowBackground">@drawable/bg_gradient_header</item>
    </style>

</resources>
